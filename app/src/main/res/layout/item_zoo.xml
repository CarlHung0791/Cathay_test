<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/clItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150sp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/ivImg"
        android:background="@color/gray"
        android:layout_marginStart="10sp"
        android:layout_width="100sp"
        android:layout_height="100sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvName"
        android:layout_marginStart="10sp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="臺灣動物區"
        app:layout_constraintStart_toEndOf="@+id/ivImg"
        app:layout_constraintTop_toTopOf="@+id/ivImg" />

    <TextView
        android:id="@+id/tvInfo"
        android:layout_marginStart="10sp"
        android:textColor="@color/black_50"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_width="0sp"
        android:layout_height="0sp"
        tools:text="臺灣動物區以臺灣原生臺灣動物區以臺灣原生臺灣動物區以臺灣原生臺灣動物區以臺灣原生"
        app:layout_constraintBottom_toTopOf="@+id/tvTime"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/ivImg"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginEnd="10sp"
        android:layout_width="30sp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_right_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_marginStart="10sp"
        android:textColor="@color/black_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="無休館資訊"
        app:layout_constraintBottom_toBottomOf="@+id/ivImg"
        app:layout_constraintStart_toEndOf="@+id/ivImg" />

    <View
        android:background="#3A3A3A"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>